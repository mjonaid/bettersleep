<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.sleep.Sleep">
    <ImageView
        android:id="@+id/ivSleepIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circleimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivSleepIcon"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tvamPmMarker"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSetAlarm"
        android:layout_width="wrap_content"
        android:backgroundTint="#729FC3"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/timeout"
        android:text="@string/set_alarm"
        app:layout_constraintTop_toBottomOf="@id/tvamPmMarker"
        />
</androidx.constraintlayout.widget.ConstraintLayout>